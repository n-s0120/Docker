<% if article.reported_by?(current_user) %>
  <%= link_to article_reports_path(article), class: 'btn btn-secondary', method: :delete, remote: true do %>通報済<% end %>
<% else %>
  <%= link_to article_reports_path(article), class: 'btn btn-secondary', method: :post, remote: true do %>通報する<% end %>
<% end %>
        <tbody>
          <tr>
            <% @flowchart_construction_chart.each do |flowchart_construction_chart| %>
              <td><%= link_to "#{flowchart_construction_chart.title}", flowchart_path(flowchart_construction_chart) %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
    <div class="content">
      <!--入管法のタブの中身-->
      <% if @flowchart_immigration_chart.any? %>
      <table border="1">
        <tbody>
          <tr>
            <% @flowchart_immigration_chart.each do |flowchart_immigration_chart| %>
              <td><%= link_to "#{flowchart_immigration_chart.title}", flowchart_path(flowchart_immigration_chart) %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
    <div class="content">
      <!--その他のタブの中身-->
